<div id="login-container-body">
    <div class="login-container">
        <div class="login-header">
            <h1>Chào mừng trở lại</h1>
            <p>Làm ơn hãy nhập thông tin của bạn để vào tài khoản</p>
        </div>
        <form method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input asp-for="Email" type="email" id="email" placeholder="Tên@gmail.com" required>
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input asp-for="Password" type="password" id="password" placeholder="hãy nhập mật khẩu" required>
            </div>
            <div class="sign-up-link">
                Bạn không có tài khoản? <a href="../Account/SignUp">Đăng ký!</a>
            </div>
            @if (ViewBag.Message != null)
            {
                <div class="create-message bg-danger text-white">@ViewBag.Message</div>
            }
            <button type="submit" class="login-button">Đăng nhập</button>
        </form>
    </div>
</div>



