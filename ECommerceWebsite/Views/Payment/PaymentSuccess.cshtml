@{
    ViewData["Title"] = "Payment Success";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Success</title>
    <style>
        .success-body{
            max-width: 100%;
            padding: 125px 15px 50px;
            display: flex;
            justify-content: center;
            position: relative;
        }

        .success-container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
            width: 90%;
            max-width: 500px;
        }

        .success-icon {
            font-size: 50px;
            color: #4CAF50;
            margin-bottom: 20px;
        }

        .success-message {
            font-size: 24px;
            color: #333333;
            margin-bottom: 10px;
        }

        .transaction-details {
            font-size: 16px;
            color: #666666;
            margin-bottom: 30px;
        }

        .btn-home {
            display: inline-block;
            padding: 10px 20px;
            color: #ffffff;
            background-color: #4CAF50;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
        }

            .btn-home:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <div class="success-body">
        <div class="success-container">
            <div class="success-icon">✔️</div>
            <div class="success-message">Thank You for Your Payment!</div>
            <div class="transaction-details">
                Your payment has been successfully processed.<br>
                <strong>Transaction Reference:</strong> @ViewBag.TransactionReference
            </div>
            <a href="@Url.Action("Index", "Home")" class="btn-home">Return to Home</a>
        </div>
    </div>
</body>
</html>
