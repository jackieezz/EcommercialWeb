<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceWebsite.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">


</head>
<body>


    <nav>
        <div id="navbar">
            <div id="navbar-logo">
                <a href="../Home/Index">
                    <img src="~/Assets/jk_logo1.png" alt="eLite" />
                </a>
            </div>
            <div id="navbar-links">
                <ul>
                    <li><a href="../Home/Index">Trang chủ</a></li>
                    <li>
                        <a href="../Order/Index">Danh sách đặt hàng</a>
                    </li>
                    <li>
                        <a href="../Admin/ProductList">Danh sách sản phẩm</a>
                    </li>
                    <li>
                        <a href="../User/Index">Danh sách người dùng</a>
                    </li>
                </ul>
            </div>
            <div id="navbar-logout">
                <a asp-controller="Account" asp-action="Logout" class="admin-logout-btn">
                    Đăng xuất <i class="bi bi-box-arrow-in-right"></i>
                </a>
            </div>
        </div>
    </nav>


    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
