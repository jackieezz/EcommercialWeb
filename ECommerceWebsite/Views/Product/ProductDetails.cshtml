			<div class="product-card">
				<div class="product-card-image">
					<img src="~/Assets/06.png" alt="Product 4">
				</div>
				<div class="product-card-title">Đồng hồ quân đội</div>
				<div class="product-purchase">
					<span class="product-price">450.000</span>
					<button class="blue-button best-seller">
						<a href="../Product/ProductList">Mua ngay</a>
					</button>
				</div>
			</div>
		</div>

		<!-- SLIDER NAVIGATION BUTTON -->
		<div class="slider-buttons">
			<button class="slider-button" onclick="slideLeft()">←</button>
			<button class="slider-button" onclick="slideRight()">→</button>
		</div>
	</div>
	<!-- END PRODUCT SLIDER SECTION -->
</div>

<script>
	const slider = document.querySelector('.product-slider');
	const cardWidth = 300;

	function slideLeft() {
		slider.scrollBy({
			left: -cardWidth,
			behavior: 'smooth'
		});
	}

	function slideRight() {
		slider.scrollBy({
			left: cardWidth,
			behavior: 'smooth'
		});
	}
</script>